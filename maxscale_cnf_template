# Listener definitions for the services
#
[Read-Only-Listener]
type=listener
service=Read-Only-Service
protocol=MariaDBClient
port=4008

[Read-Write-Listener]
type=listener
service=Read-Write-Service
protocol=MariaDBClient
port=4006


[server1]
type=server
address=192.168.1.21
port=3306 
protocol=MariaDBBackend

[server2]
type=server
address=192.168.1.28
port=3308 
protocol=MariaDBBackend

# Monitor for the servers
[MariaDB-Monitor]
type=monitor
module=mariadbmon
servers=server1,server2
user=maxscale
password=Icui4cu1993
monitor_interval=2s

# Service definitions
[Read-Only-Service]
type=service
router=readconnroute
servers=server1,server2
user=maxscale
password=Icui4cu1993
router_options=slave

[Read-Write-Service]
type=service
router=readwritesplit
servers=server1,server2
user=maxscale
password=Icui4cu1993

